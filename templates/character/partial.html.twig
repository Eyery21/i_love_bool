<div class="character-section">
    <h2>Characters</h2>
    <ul>
        {% for character in characters %}
            <li>
                <a href="{{ path('app_character_show', {'id': character.id}) }}">{{ character.name }} ({{ character.realName }})</a>
            </li>
        {% else %}
            <li>No characters found.</li>
        {% endfor %}
    </ul>
</div>

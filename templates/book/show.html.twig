{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Desciption</th>
                <td>{{ book.description }}</td>
            </tr>
       
            <tr>
                <th>author</th>
                <td>{{ book.author}}</td>
            </tr>
             
            <tr>
                <th>illustrator</th>
                <td>{{ book.illustrator }}</td>
            </tr>
             
            <tr>
                <th>price</th>
                <td>{{ book.price}}</td>
            </tr>
             
            <tr>
                <th>serie</th>
                <td>{{ book.serie }}</td>
            </tr>
             
            <tr>
                <th>volum_number</th>
                <td>{{ book.volumnumber }}</td>
            </tr>

             
            <tr>
                <th>page_count</th>
                <td>{{ book.pagecount }}</td>
            </tr>

             
            <tr>
                <th>rating</th>
                <td>{{ book.rating}}</td>
            </tr>
            <tr>
                <th>Posseded</th>
                <td>{{ book.posseded ? 'Yes' : 'No' }}</td>
            </tr>
              {% if book.image %}
                <img src="/uploads/images/{{ book.image }}" alt="Image du livre" style="max-width: 200px;">
            {% else %}
                <em>Pas d'image</em>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_book_index') }}">back to list</a>

   {% if is_granted('ROLE_ADMIN') %}

                        <a href="{{ path('app_book_edit', {'id': book.id}) }}">edit</a>
    {{ include('book/_delete_form.html.twig') }}
                    {% endif %}

{% endblock %}
